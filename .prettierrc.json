{
	"singleQuote": true,
	"printWidth": 180,
	"tabWidth": 2,
	"semi": true,
	"trailingComma": "none",
	"bracketSameLine": true,
	"arrowParens": "always",
	"bracketSpacing": true,
	"useTabs": true,
	"overrides": [
		{
			"files": "*.php",
			"options": {
				"phpVersion": "8.1",
				"tabWidth": 4,
				"braceStyle": "1tbs"
			}
		},
		{
			"files": "*.md",
			"options": {
				"tabWidth": 4
			}
		},
		{
			"files": ["*.css", "*.sass", "*.scss"],
			"options": {
				"tabWidth": 4
			}
		},
		{
			"files": ["*.jsx"],
			"options": {
				"bracketSameLine": false,
				"tabWidth": 4
			}
		}
	]
}
